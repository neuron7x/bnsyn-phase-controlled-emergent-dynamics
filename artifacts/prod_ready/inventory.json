{
  "stack": [
    "Python"
  ],
  "toolchains": {
    "python": "3.12.12",
    "pip": "26.0.1",
    "build_backend": "setuptools",
    "package_manager": "pip",
    "task_runner": "make"
  },
  "entrypoints": [
    "bnsyn CLI (src/bnsyn/cli.py)",
    "python -m bnsyn"
  ],
  "canonical_tasks": [
    "make install",
    "make build",
    "make test",
    "make lint",
    "make mypy",
    "make security",
    "make sbom",
    "make release",
    "make cleanroom"
  ],
  "configs_surface": [
    "pyproject.toml",
    "requirements-lock.txt",
    ".gitleaks.toml",
    "mypy.ini/pyproject mypy section",
    "quality/*.json"
  ],
  "ci_map": [
    ".github/workflows/ci-pr.yml",
    ".github/workflows/ci-pr-atomic.yml",
    ".github/workflows/ci-validation.yml",
    ".github/workflows/release-pipeline.yml"
  ],
  "release_targets": [
    "dist/*.tar.gz",
    "dist/*.whl",
    "artifacts/release_readiness.json",
    "artifacts/release_readiness.md"
  ]
}