{
  "stack_summary": {
    "language": "Python",
    "runtime": "Python 3.12.12",
    "build_backend": "setuptools",
    "package_manager": "pip",
    "test_framework": "pytest"
  },
  "entrypoints": [
    "python -m bnsyn",
    "bnsyn demo",
    "bnsyn run",
    "bnsyn dtcheck",
    "bnsyn sleep-stack"
  ],
  "canonical_commands": {
    "install": "python -m pip install -e \".[test,docs]\"",
    "build": "python -m build",
    "test": "python -m pytest -m \"not validation\" -q",
    "lint": "ruff check . && pylint src/bnsyn",
    "typecheck": "mypy src --strict --config-file pyproject.toml",
    "run": "bnsyn demo --steps 20 --dt-ms 0.1 --seed 123 --N 16",
    "release": "python -m build"
  },
  "config_surface": {
    "env_vars": [
      "BNSYN_USE_TORCH",
      "BNSYN_DEVICE"
    ]
  },
  "dependency_model": {
    "file": "pyproject.toml",
    "lockfile": "requirements-lock.txt",
    "strategy": "Pinned versions in pyproject and lockfile for reproducible installs"
  },
  "ci_map": {
    "ci-pr-atomic.yml": [
      "make test-gate",
      "python -m pytest --collect-only -q"
    ],
    "_reusable_quality.yml": [
      "ruff check .",
      "mypy src --strict --config-file pyproject.toml",
      "pylint src/bnsyn"
    ]
  }
}
