{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BN-Syn Safety Traceability",
  "type": "object",
  "required": ["version", "traceability"],
  "properties": {
    "version": {"type": "string"},
    "traceability": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["hazard_id", "safety_constraints"],
        "properties": {
          "hazard_id": {"type": "string", "pattern": "^H-\\d{3}$"},
          "safety_constraints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "description", "enforced_by", "tests", "docs"],
              "properties": {
                "id": {"type": "string", "pattern": "^SC-\\d{3}$"},
                "description": {"type": "string"},
                "enforced_by": {"type": "array", "minItems": 1, "items": {"type": "string"}},
                "tests": {"type": "array", "minItems": 1, "items": {"type": "string"}},
                "docs": {"type": "array", "minItems": 1, "items": {"type": "string"}}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
