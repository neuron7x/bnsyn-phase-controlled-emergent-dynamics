{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BN-Syn Experiment Results",
  "type": "object",
  "required": ["condition", "num_seeds", "aggregates", "trials"],
  "properties": {
    "condition": {
      "type": "string",
      "description": "Experiment condition label"
    },
    "num_seeds": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of seeds used for trials"
    },
    "seeds": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Explicit seed list"
    },
    "aggregates": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "number"
      },
      "description": "Aggregate statistics over trials"
    },
    "trials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/trial"
      },
      "description": "Per-seed trial results"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "trajectory_series": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "trajectory_block": {
      "type": "object",
      "required": ["w_total_mean", "w_cons_mean", "tag_frac", "protein", "temperature"],
      "properties": {
        "w_total_mean": {
          "$ref": "#/definitions/trajectory_series"
        },
        "w_cons_mean": {
          "$ref": "#/definitions/trajectory_series"
        },
        "tag_frac": {
          "$ref": "#/definitions/trajectory_series"
        },
        "protein": {
          "$ref": "#/definitions/trajectory_series"
        },
        "temperature": {
          "$ref": "#/definitions/trajectory_series"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/trajectory_series"
      }
    },
    "normalized_block": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "anyOf": [
          {"type": "number"},
          {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        ]
      }
    },
    "trial": {
      "type": "object",
      "required": [
        "seed",
        "condition",
        "steps",
        "w_total_final_mean",
        "w_cons_final_mean",
        "tag_activity_mean",
        "protein_final",
        "trajectories"
      ],
      "properties": {
        "seed": {
          "type": "integer",
          "minimum": 0
        },
        "condition": {
          "type": "string"
        },
        "steps": {
          "type": "integer",
          "minimum": 1
        },
        "w_total_final_mean": {
          "type": "number"
        },
        "w_cons_final_mean": {
          "type": "number"
        },
        "tag_activity_mean": {
          "type": "number"
        },
        "protein_final": {
          "type": "number"
        },
        "trajectories": {
          "$ref": "#/definitions/trajectory_block"
        },
        "normalized": {
          "$ref": "#/definitions/normalized_block"
        }
      },
      "additionalProperties": false
    }
  }
}
